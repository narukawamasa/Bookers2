  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'user_info', user: @user %>
        <%= render 'new_book', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@books.user_id) do %>
                  <%= image_tag @books.user.get_profile_image(100,100) %>
                  <br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@books.id) do %>
                <%= @books.title %>
                <% end %>
              </td>
              <td>
                <%= @books.body %>
              </td>
              <td>
                <% if @books.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @books.user == current_user %>
                  <%= link_to "Dstroy", book_path(@books.id), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
