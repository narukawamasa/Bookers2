  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'user_info', user: @user %>
        <%= render 'new_book', book: @books %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              </td>
              <td id="favorite_buttons_<%= @book.id %>" >
              <%= render "favorite", book: @book %>
              </td>
              <td>
                コメント数 : <%= @book.book_comments.count %>
              </td>
            </tr>
          </tbody>
        </table>
        <table>
          <tbody>
            <% @book.book_comments.each do |book_comment| %>
            <tr>
            <td>
              <%= image_tag book_comment.user.get_profile_image(100,100) %><br />
              <%= link_to user_path(book_comment.user_id) do %>
              <%= book_comment.user.name %>
              <% end %>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <% if book_comment.user == current_user %>
            <td>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn btn-sm btn-danger" %>
            </td>
            <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <div class="form-group">
          <%= f.text_area :comment, rows: '5', class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
